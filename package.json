    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2017": "^6.22.0",
    "babel-register": "^6.26.0",
    "cpx": "^1.5.0",
    "eslint": "^4.7.2",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-typescript": "^0.7.0",
    "express": "^4.15.3",
    "markdownlint-cli": "^0.3.1",
    "npm-run-all": "^4.1.1",
    "on-headers": "^1.0.1",
